#!/bin/sh

~/bin/log "Launching startup applications..."

# Start ups that require Xorg
if ~/bin/hasX ; then
	# if xbanish exists and is not yet running, run it in background
	[ -x "$(command -v xbanish)" ] && if [ "$(ps cax | grep xbanish)" = "" ] ; then
		~/bin/log "xbanish started"
		xbanish &
	else
		~/bin/log "xbanish already running"
	fi
	[ -x "$(command -v redshift)" ] && if [ "$(ps cax | grep redshift)" = "" ] ; then
		redshift -t 6500k:4000k >/dev/null 2>&1 &
	fi
	[ -x "$(command -v xmodmap)" ] && {
		#xmodmap -e "keycode $(xmodmap -pke | grep Alt_R | awk '{print $2}') = Super_L"  # reassign Alt_R to Super_L
		#xmodmap -e "remove mod1 = Super_L"  # make sure X keeps it out of the mod1 group
	}
fi


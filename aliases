#!/bin/sh
# vi: syntax=sh

alias c='clear'
alias ls='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias mkdir='mkdir -p'
alias x='exit'
alias ..='cd ..'
alias python='env python3'
alias yaourt='yay'

##
# CMDs with "c" prefix
##
for i in         \
	e        \
	ls       \
	la       \
	ll       \
	uf       \
	nf       \
	fortune  \
	neofetch
do
	# shellcheck disable=SC2139
	alias "c${i}=c; ${i}"
done

##
# CMDs that need root privileges
##

# Linux / FreeBSD
for i in           \
	apk        \
	apt        \
	apt-get    \
	pacman     \
	portmaster \
	yum        \
	dnf        \
	pkg        \
	pkg_add    \
	pkg_delete \
	brew       \
	eopkg      \
	wifi-menu
do
	if [ ! -x "$(command -v "$i")" ]
	then
		continue
	fi

	if uname | grep -qi "openbsd"
	then
		PRIVILEGE_COMAND="doas"
	else
		PRIVILEGE_COMAND="sudo"
	fi

	if [ "$i" = "apt"     ] ||
	   [ "$i" = "apt-get" ]
	then
		# shellcheck disable=SC2139
		alias "${i}=${PRIVILEGE_COMAND} ${i} -y"
	else
		# shellcheck disable=SC2139
		alias "${i}=${PRIVILEGE_COMAND} ${i}"
	fi
done


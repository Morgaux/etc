#!/bin/sh

alias c='clear'
alias ls='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias mkdir='mkdir -p'
alias x='exit'
alias ..='cd ..'
alias python='env python3'
alias py='env python3'
alias yaourt='yay'

for i in         \
	e        \
	ls       \
	la       \
	ll       \
	uf       \
	nf       \
	fortune  \
	neofetch
do
	# shellcheck disable=SC2139
	alias "c${i}=c; ${i}"
done


#!/bin/sh

alias c='clear'
alias ls='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias mkdir='mkdir -p'
alias x='exit'
alias ..='cd ..'
alias python='env python3'

# CMDs with "c" prefix
for i in e ls la ll; do
	alias c"$i"="c; $i"
done

# CMDs that need root privs
for i in apt apt-get pacman yum dnf pkg brew eopkg; do
	alias "$i"="sudo $i"
done
# OpenBSD
alias pkg_add='doas pkg_add'


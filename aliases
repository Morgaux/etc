#!/bin/sh

# ~/etc/aliases {{{
# vi: syntax=sh

# Misc Aliases {{{
alias c='clear'
alias ls='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias mkdir='mkdir -p'
alias x='exit'
alias ..='cd ..'
alias python='env python3'
alias yaourt='yay'
# Misc Aliases }}}

# Alias to make commands with "c" prefix to clear screen {{{
for i in         \
	e        \
	ls       \
	la       \
	ll       \
	uf       \
	nf       \
	fortune  \
	neofetch
do
	# shellcheck disable=SC2139
	alias "c${i}=c; ${i}"
done
# Alias to make commands with "c" prefix to clear screen }}}

# Aliases to automatically escalate root privileges {{{
for i in           \
	apk        \
	apt        \
	apt-get    \
	pacman     \
	portmaster \
	yum        \
	dnf        \
	pkg        \
	pkg_add    \
	pkg_delete \
	brew       \
	eopkg      \
	wifi-menu
do
	# Skip commands that aren't available {{{
	if [ ! -x "$(command -v "$i")" ]
	then
		continue
	fi
	# Skip commands that aren't available }}}

	# Determine if sudo or doas should be used {{{
	if uname | grep -qi "openbsd"
	then
		PRIVILEGE_COMAND="doas"
	else
		PRIVILEGE_COMAND="sudo"
	fi
	# Determine if sudo or doas should be used }}}

	# Check for special cases and bind the aliases {{{
	if [ "$i" = "apt"     ] ||
	   [ "$i" = "apt-get" ]
	then
		# shellcheck disable=SC2139
		alias "${i}=${PRIVILEGE_COMAND} ${i} -y"
	else
		# shellcheck disable=SC2139
		alias "${i}=${PRIVILEGE_COMAND} ${i}"
	fi
	# Check for special cases and bind the aliases }}}
done
# Aliases to automatically escalate root privileges }}}

# ~/etc/aliases }}}


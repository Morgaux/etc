#!/bin/sh

~/bin/log "Creating aliases..."

alias c='clear'
alias ls='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias mkdir='mkdir -p'
alias x='exit'
alias ..='cd ..'
alias python='env python3'
alias dvtm='(etc/dstatus & ) ; dvtm -s /tmp/dvtm-status.fifo'

alias git='pregit' # see ~/bin

##
# CMDs with "c" prefix
##
for i in e ls la ll; do
	alias c"$i"="c; $i"
done

##
# CMDs that need root privileges
##
for i in apt apt-get pacman portmaster yum dnf pkg brew eopkg; do
	[ -x "$(command -v $i)" ] && alias "$i"="sudo $i"
done
# OpenBSD
alias pkg_add='doas pkg_add'



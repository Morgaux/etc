#!/bin/sh

# set PATH
for dir in                                                \
	"/sbin"                                           \
	"/bin"                                            \
	"/usr/sbin"                                       \
	"/usr/bin"                                        \
	"/usr/local/sbin"                                 \
	"/usr/local/bin"                                  \
	"$HOME/bin"                                       \
	"$HOME/bin/$(uname | tr '[:upper:]' '[:lower:]')" \
	"$HOME/.cabal/bin"                                \
	"$HOME/src/ufetch"
do
	[ -d "$dir" ] && PATH="$dir:$PATH"
done

# remove path duplicates
PATH="$(printf "%s" "$PATH" | awk -v RS=':' '!a[$1]++ { if (NR > 1) printf RS; printf $1 }')"

EDITOR="$(command -v vim || command -v vi || command -v nano 2/>dev/null)"
JAVA_HOME="$(readlink -f /usr/bin/javac | sed 's:/bin/javac::')"
PAGER=less
ENV="$HOME/etc/kshrc"
CLASSPATH="$CLASSPATH:."
_JAVA_AWT_WM_NONREPARENTING="1"
DOTNET_CLI_TELEMETRY_OPTOUT=1
DVTM_TERM="xterm"

export PATH
export EDITOR
export JAVA_HOME
export PAGER
export ENV
export CLASSPATH
export _JAVA_AWT_WM_NONREPARENTING
export DOTNET_CLI_TELEMETRY_OPTOUT
export DVTM_TERM


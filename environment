#!/bin/sh

# ~/etc/environment {{{

# Misc ENV variables {{{
EDITOR="$(command -v vim || command -v vi || command -v nano 2/>dev/null)"
JAVA_HOME="$([ -x "$(command -v java)" ] && java -XshowSettings:properties -version 2>&1 | awk '/java\.home/ { print $3 }')"
PAGER=less
ENV="$HOME/etc/kshrc"
CLASSPATH="$CLASSPATH:."
_JAVA_AWT_WM_NONREPARENTING="1"
DOTNET_ROOT="$HOME/.dotnet"
DOTNET_CLI_TELEMETRY_OPTOUT=1
DVTM_TERM="xterm"
# Misc ENV variables }}}

# Set PATH {{{
for dir in                                                \
	"/sbin"                                           \
	"/bin"                                            \
	"/usr/sbin"                                       \
	"/usr/bin"                                        \
	"/usr/local/sbin"                                 \
	"/usr/local/bin"                                  \
	"$HOME/bin"                                       \
	"$HOME/bin/$(uname | tr '[:upper:]' '[:lower:]')" \
	"$HOME/.cabal/bin"                                \
	"$HOME/src/ufetch"                                \
	"$JAVA_HOME"                                      \
	"$JAVA_HOME/bin"                                  \
	"$JAVA_HOME/.."                                   \
	"$JAVA_HOME/../bin"                               \
	"$JAVA_HOME/jre"                                  \
	"$JAVA_HOME/jre/.."                               \
	"$JAVA_HOME/jre/bin"                              \
	"$JAVA_HOME/jdk"                                  \
	"$JAVA_HOME/jdk/.."                               \
	"$JAVA_HOME/jdk/bin"                              \
	"$DOTNET_ROOT"
do
	# follow link dirs and expand ".." in paths
	dir="$(readlink -f "$dir")"

	[ -d "$dir" ] && PATH="$dir:$PATH"
done

# remove path duplicates
PATH="$(printf "%s" "$PATH" | awk -v RS=':' '!a[$1]++ { if (NR > 1) printf RS; printf $1 }')"
# Set PATH }}}

# Exports {{{
export PATH
export EDITOR
export JAVA_HOME
export PAGER
export ENV
export CLASSPATH
export _JAVA_AWT_WM_NONREPARENTING
export DOTNET_ROOT
export DOTNET_CLI_TELEMETRY_OPTOUT
export DVTM_TERM
# Exports }}}

# ~/etc/environment }}}


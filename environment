#!/bin/sh

# set PATH so it includes user's private bin
if [ -d "$HOME/bin" ] ; then
	PATH="$HOME/bin:$PATH"
fi

# set EDITOR to most prefered available
for i in vim vi nano ; do
	[ -x "$(command -v $i)" ] || continue
	EDITOR="$(which $i)" && break
done

JUNIT_HOME="$HOME/uni/159272/lib/junit4.10"
CLASSPATH="$CLASSPATH:.:$JUNIT_HOME:$JUNIT_HOME/junit-4.10.jar"

# export variables
export PATH HOME EDITOR JUNIT_HOME CLASSPATH


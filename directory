#!/bin/sh

# create symlinks if missing
[ -f ~/etc/kshrc ] && [ ! -L ~/.kshrc ] && ln -sf ~/etc/kshrc ~/.kshrc
[ -f ~/etc/kshrc ] && [ ! -L ~/.kshrc ] && ln -sf ~/etc/kshrc ~/.mkshrc
[ -f ~/etc/vimrc ] && [ ! -L ~/.vimrc ] && ln -sf ~/etc/vimrc ~/.vimrc
[ -f ~/etc/tmux.conf ] && [ ! -L ~/.tmux.conf ] && ln -sf ~/etc/tmux.conf ~/.tmux.conf

# make my dirs
for DIR in src var uni tmp; do
	[ -d "$HOME/$DIR" ] && continue
	mkdir -p "$HOME/$DIR"
	log "~/$DIR not found, directory added"
done

# add my bin launchers
[ -d ~/bin/launchers ] && [ -d ~/.local/share/applications ] && for APP in ~/bin/launchers/*.desktop; do
	LAUNCHER="$HOME/.local/share/applications/$(basename "$APP")"
	[ ! -L "$LAUNCHER" ] && ln -sf "$APP" "$DESKTOP"
	log "$APP luncher installed"
done


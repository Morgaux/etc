" Package Management {{{

" start pathogen
execute pathogen#infect()
filetype plugin indent on

" options for https://github.com/lifepillar/vim-mucomplete
set completeopt+=menuone
set completeopt+=noselect
set completeopt+=noinsert

" options for https://github.com/airblade/vim-gitgutter
set updatetime=100
hi link GitGutterAdd    Todo
hi link GitGutterChange Normal
hi link GitGutterDelete Error

" Package Management }}}

" Generic Options {{{

" misc options
set belloff=all
set showcmd
set nohlsearch
set nu
set ruler
set report=1
set nocompatible
set showtabline=2
set laststatus=2
set ignorecase
set spell spelllang=en_nz
set smartindent
set backspace=indent,eol,start
set incsearch
set wildmenu
set mouse=a
set mousemodel=popup
set mouseshape=a:beam
set textwidth=80
set colorcolumn=+1
set foldmethod=marker

" wrap lines that are longer than the terminal window
set wrap linebreak nolist

" Tabs must be eight wide!!!
set tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab

" No line numbers if the term is too narrow for 80 chars
if &columns < 85
	set nonu
endif

" Generic Options }}}

" Language Specific Options {{{

" Override language specific settings
autocmd Filetype python  setlocal           softtabstop=4 shiftwidth=4 noexpandtab nowrap
autocmd Filetype scala   setlocal           softtabstop=4 shiftwidth=4 noexpandtab nowrap
autocmd Filetype java    setlocal           softtabstop=4 shiftwidth=4 noexpandtab nowrap
autocmd Filetype cs      setlocal           softtabstop=4 shiftwidth=4   expandtab nowrap
autocmd Filetype haskell setlocal           softtabstop=4 shiftwidth=4   expandtab nowrap
autocmd Filetype sh      setlocal tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab nowrap
autocmd Filetype vim     setlocal tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab nowrap
autocmd Filetype c       setlocal tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab nowrap
autocmd Filetype make    setlocal tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab nowrap
autocmd Filetype tex     setlocal tabstop=8 softtabstop=0 shiftwidth=8 noexpandtab nowrap

" auto make latex on save
autocmd VimLeave *.tex silent !make > /dev/null

" Language Specific Options }}}

" Visual and Syntax Options {{{

" enable syntax
syntax on

" Colours and highlighting
set t_Co=256                  " use 256 colors
set t_ut=""                   " disable background erase
set t_8f=[38;2;%lu;%lu;%lum " set foreground color
set t_8b=[48;2;%lu;%lu;%lum " set background color
set t_Co=256                  " Enable 256 colors
set termguicolors             " Enable GUI colors for the terminal to get truecolor
set background=dark           " ahhhhhh my eyes!!
let loaded_matchparen = 1     " prevent annoying paren matching

" Catch whitespace errors
match Error /\s\+$\| \+\ze\t/
au InsertEnter * redraw!
au InsertLeave * redraw!

" Show tabs as comments
set list
set listchars=tab:\|\ 
match Comment /\t/

" Set colorscheme (after other highlight settings)
colo typewriter-night

" Visual and Syntax Options }}}

" Count Words Per Minute {{{
"
function! s:start_counting_wpm() abort
	if get(b:, 'wpm_start', 0) is 0 " start counting
		let b:wpm_start = [reltime(), wordcount()]
	endif
endfunction

function! s:finish_counting_wpm() abort
	if get(b:, 'wpm_start', 0) isnot 0 " finish counting
		let l:secs  = reltime(b:wpm_start[0])[0]
		let l:mins  = l:secs[0] / 60
		let l:words = wordcount()['words'] - b:wpm_start[1]['words']
		let l:speed = l:words / max([1, l:mins])
		unlet b:wpm_start

		echomsg printf('%s WPM: you typed %s words in %s seconds', l:speed, l:words, l:secs)
	endif
endfunction

" how long to cut off the count if nothing has been typed (milliseconds)
set updatetime=4000 " 4000 ms is the default

augroup wpm
	" clear group
	autocmd!

	" events to start counting
	autocmd InsertEnter  * call s:start_counting_wpm()
	autocmd CursorMovedI * call s:start_counting_wpm()

	" events to stop counting and display
	autocmd InsertLeave * call s:finish_counting_wpm()
	autocmd CursorHoldI * call s:finish_counting_wpm()
augroup end

" Count Words Per Minute }}}

" Settings Stolen from JCS {{{

"
" I've shamelessly stolen this stuff, although it's quite good so I don't mind
"
" http://github.com/jcs/dotfiles
" Author: Joshua Stein
" License: none
"
" Don't pollute directories with swap files, keep them in one place
silent !mkdir -p ~/.vim/backup/
silent !mkdir -p ~/.vim/swp/
set backupdir=~/.vim/backup//
set directory=~/.vim/swp//
" ...except crontab, which will complain that it can't see any changes
au FileType crontab setlocal bkc=yes

" Settings Stolen from JCS }}}

